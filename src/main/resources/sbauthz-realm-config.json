    {
      "username" : "alice",
      "enabled": true,
      "firstName": "Alice",
      "lastName": "Wonderland",
      "credentials" : [
        { "type" : "password",
          "value" : "alice" }
      ],
      "realmRoles": [ "user", "manager", "uma_authorization" ],
      "applicationRoles": {
